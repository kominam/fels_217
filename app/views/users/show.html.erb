<% provide :title, @user.user_name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render "shared/user_info" %>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-5">
    <%= render "follow_form" if logged_in? %>
  <div class="col-md-6">
    <%= t ".lesson" %>
    <%= render "lessons" %>
  </div>
</div>
